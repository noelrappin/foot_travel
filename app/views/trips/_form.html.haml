= bootstrap_form_for @trip do |f|
  -if @trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trip.errors.count, "error")} prohibited this trip from being saved:"
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :name
  .field
    = f.text_area :description, :rows => 5, :cols => 75
  .field
    %div Start Date
    = f.date_select :start_date
  .field
    %div End Date
    = f.date_select :end_date
  .field
    = f.text_field :image_name
  .field
    = f.text_field :slug
  .field
    = f.text_field :tag_line
  .field
    = f.text_field :price
  .field
    = f.text_field :location
  .field
    = f.text_field :activity
  .actions
    = f.submit 'Save'
